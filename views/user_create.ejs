<!-- include header -->
<%- include('partials/_header') %> 
<!-- /include header -->

<!-- Main Content -->
<main class="c-main">
    <div class="o-wrap">
        <div class="c-main__user">
            <div class="c-main__user__filter">
                <a href="/"><i class="fa-sharp fa-solid fa-angles-left"></i> All Users</a>
            </div>
            <div class="c-main__user__new">
                <h2>New User</h2>
                <p>Use the below form to user a new account</p>
            </div>
        </div>

        <!-- Form handling -->
        <form method="POST" class="c-form" id="user_update">
            <div class="c-form__user">
                <div class="c-form__user__group">
                    <label for="name" class="c-form__user__group__label">Name</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" id="name" name="name" value="" placeholder="John Doe">
                </div>
                <div class="c-form__user__group">
                    <label for="email" class="c-form__user__group__label">Email</label>
                    <input type="email" id="email" name="email" value="" placeholder="example@email.com">
                </div>
                <div class="c-form__user__group">
                    <label class="c-form__user__group__label">Gender</label>
                    <div class="c-form__user__group__option">
                        <input type="radio" id="male" name="gender" value="male">
                        <label for="male">Male</label>
                    </div>
                    <div class="c-form__user__group__option">
                        <input type="radio" id="female" name="gender" value="female">
                        <label for="female">Female</label>
                    </div>
                </div>
                <div class="c-form__user__group">
                    <label class="c-form__user__group__label">Status</label>
                    <div class="c-form__user__group__option">
                        <input type="radio" id="active" name="status" value="active">
                        <label for="active">Active</label>
                    </div>
                    <div class="c-form__user__group__option">
                        <input type="radio" id="inactive" name="status" value="inactive">
                        <label for="inactive">Inactive</label>
                    </div>
                </div>
                <div class="c-form__user__group">
                    <button type="submit" class="c-btn c-btn--submit">Save</button>
                </div>
            </div>
        </form>
    </div>
</main>
<!-- /Main Content -->

<!-- include footer -->
<%- include('partials/_footer') %> 
<!-- /include footer -->